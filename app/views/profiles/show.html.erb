
<div class="container">

  <div class="row mt-4">

    <!-- Blog Entries Column -->
    <div class="col-md-4 offset-md-4 text-center">

      <h1 class="my-4">My Profile</h1>

      <%= form_for @profile, url: profile_path(current_user), method: :put do |f| %>
        <div class="form-group">
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-xs btn-primary" %>
        </div>
      <% end %>

    </div>

  </div>

</div>
