
<div class="container">

  <div class="row">

    <div class="col-lg-12">

      <h1 class="my-4">My Posts</h1>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Created</th>
            <th scope="col">Updated</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <th scope="row"><%= post.id %></th>
              <td><%= post.title %></td>
              <td><%= post.created_at %></td>
              <td><%= post.updated_at %></td>
              <td><%= post.post_status %></td>
              <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary btn-xs'  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>

</div>
